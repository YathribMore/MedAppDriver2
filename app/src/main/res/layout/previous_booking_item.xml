<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl">
    <RelativeLayout
        android:background="@drawable/btn_bg_rounded_green10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="17.5dp">


        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/margin_normal_size"
            android:layout_marginRight="@dimen/margin_normal_size"
            android:background="@drawable/btn_bg_blue"
            android:gravity="center"
            android:paddingLeft="@dimen/margin_normal_size"
            android:paddingRight="@dimen/margin_normal_size"
            android:text="123456"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="212dp"
            android:layout_marginTop="50dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/namedoctorsd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/tajawalmedium"
                android:gravity="center"
                android:text="عيادة الجلدية"
                android:textSize="@dimen/txt_normal_size14"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="212dp"
                 android:layout_marginTop="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/tajawalmedium"
                android:gravity="center"
                android:text="دكتور محمود"
                android:textSize="@dimen/txt_normal_size14"
                android:textStyle="bold" />

            <TextView
                android:visibility="gone"
                android:id="@+id/namedoctors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tajawalmedium"
                android:textSize="@dimen/txt_normal_size14"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:text="عيادة الجلدية" />


            <!--            <TextView-->
            <!--                android:id="@+id/status"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="ewew" />-->


        </LinearLayout>

        <TextView
            android:id="@+id/price"
            android:layout_alignParentLeft="true"
            android:background="@drawable/shape_bg_2radius"
            android:paddingRight="@dimen/margin_normal_size"
            android:paddingLeft="@dimen/margin_normal_size"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="مستشفى  البراحة "
            android:textColor="@android:color/white"/>

    </RelativeLayout>
    <ImageView
        android:visibility="gone"
        android:src="@drawable/ic_arrow_down"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_circle_green"/>
</RelativeLayout>